<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.szmsd.chargerules.mapper.WarehouseOperationMapper">

    <resultMap id="WarehouseOperationMap" type="com.szmsd.chargerules.vo.WarehouseOperationVo">
        <result column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="warehouse_code" property="warehouseCode" />
        <result column="remark" property="remark" />
        <result column="currency_code" property="currencyCode" />
        <result column="currency_name" property="currencyName" />
        <collection property="details" javaType="java.util.List" select="com.szmsd.chargerules.mapper.WarehouseOperationDetailsMapper.selectWarehouseOperationDetails" column="id" />
    </resultMap>

    <select id="listPage" resultMap="WarehouseOperationMap" parameterType="com.szmsd.chargerules.dto.WarehouseOperationDTO">
        SELECT id,create_time,warehouse_code,remark,currency_code,currency_name FROM `cha_warehouse_operation`
        <where>
            <if test="warehouseCode != null and warehouseCode != ''">
                AND warehouse_code = #{warehouseCode}
            </if>
        </where>
    </select>

    <select id="selectDetailsById" resultMap="WarehouseOperationMap" parameterType="Integer">
        SELECT id,create_time,warehouse_code,remark,currency_code,currency_name FROM `cha_warehouse_operation`
        <where>
            id = #{id}
        </where>
    </select>

</mapper>
